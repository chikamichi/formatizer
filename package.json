{
  "name": "@oclock/formatizer",
  "version": "1.2.6",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/O-clock-dev/formatizer.git"
  },
  "author": "Alexandre Bourdeaud'hui <alexandre@oclock.io>",
  "license": "MIT",
  "scripts": {
    "start": "brunch watch --server",
    "build": "babel src -d dist",
    "start:w": "NODE_ENV=development webpack-dev-server",
    "build:w": "NODE_ENV=production webpack",
    "test": "test(){ if [ -z $1 ]; then mocha tests/.setup.js 'tests/**/*.test.js'; else mocha tests/.setup.js $1 $2; fi; }; test",
    "lint": "eslint --fix '{example,src,tests}/**/*.{js,json}'",
    "pretty": "prettier --write '{example,src,tests}/**/*.{js,json}'",
    "precommit": "lint-staged && yarn test"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "emojione": "^2.2.7",
    "emojione-picker": "^2.2.1",
    "react-syntax-highlighter": "^5.7.0"
  },
  "peerDependencies": {
    "glamor": "^2.20.40",
    "glamorous": "^4.11.0",
    "react": "^15.4.1 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-node": "^0.3.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jsdom": "^11.5.1",
    "lint-staged": "^6.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^4.0.1",
    "prettier": "^1.9.1",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-test-renderer": "^15.6.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "main": "dist/index.js",
  "files": [
    "README.md",
    "dist",
    "example"
  ],
  "bugs": {
    "url": "https://github.com/O-clock-dev/formatizer/issues"
  },
  "description": "Format easily your message.",
  "homepage": "https://github.com/O-clock-dev/formatizer#readme",
  "keywords": [
    "format",
    "message",
    "react"
  ],
  "contributors": [
    "Maxime Vasse <maxime@oclock.io>"
